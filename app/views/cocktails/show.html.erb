<h1><%= @cocktail.name %></h1>

<div class="cocktail-details">
  <h4>Composition :</h4>
  <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %> <%= link_to "Delete this dose", dose_path(dose), class: 'btn btn-danger',
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
  </ul>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>
