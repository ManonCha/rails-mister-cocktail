<div class="banner">
  <div class="banner-content">
    <h1>Mister Cocktail</h1>
    <%= link_to("Add a cocktail", new_cocktail_path, class: 'btn btn-primary btn-lg') %>
  </div>
</div>
<div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card">
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <div class="card-name"><%= cocktail.name %></div>
      <div class="btn btn-primary"><%= link_to "See details", cocktail_path(cocktail.id) %></div>
    </div>
  </div>
  <% end %>
</div>
